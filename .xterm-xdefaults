!XTerm.vt100.translations: #override \n Ctrl <Key> minus: smaller-vt-font() \n Ctrl <Key> plus: larger-vt-font()
! https://www.linuxsecrets.com/archlinux-wiki/wiki.archlinux.org/index.php/Xterm.html
! http://futurile.net/2016/06/14/xterm-setup-and-truetype-font-configuration/
XTerm*VT100.translations: #override Ctrl <Key>minus: smaller-vt-font() \n Ctrl <Key>plus: larger-vt-font() \n Ctrl <Key>0: set-vt-font(d) \n <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n Meta <Btn1Up>: exec-formatted("google-chrome '%t'", PRIMARY) \n Meta <Key>slash: print-everything()
!xterm*VT100.Translations: #override Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n Ctrl Shift <Key>C: copy-selection(CLIPBOARD)
! XTerm*VT100*translations:       #override \
!    <Key>BackSpace: string(0x7f)
